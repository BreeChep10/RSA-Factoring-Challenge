#!/usr/bin/env python3

import sys
import math

# Function to factorize a number n into p and q
def factorize(n):
    if n < 4:
        return None, None  # Numbers less than 4 are not factorizable as per the requirements

    p = 2
    while p <= int(math.sqrt(n)):
        if n % p == 0:
            q = n // p
            return p, q
        p += 1

    return None, None  # If no factors are found

def main():
    if len(sys.argv) != 2:
        print("Usage: factors <file>")
        sys.exit(1)

    input_file = sys.argv[1]

    try:
        with open(input_file, 'r') as file:
            for line in file:
                n = int(line.strip())
                p, q = factorize(n)
                if p is not None:
                    print(f"{n}={p}*{q}")
                else:
                    print(f"{n} is prime.")
    except FileNotFoundError:
        print(f"File '{input_file}' not found.")
    except ValueError:
        print("Invalid input in the file. Please ensure all lines contain valid natural numbers greater than 1.")

if __name__ == '__main__':
    main()
